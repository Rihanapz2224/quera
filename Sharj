def time(k):
    """
    تابعی برای محاسبه زمان لازم برای رسیدن از 0 درصد به k درصد شارژ تلفن همراه.
    
    پارامترها:
    k -- درصد شارژ هدف
    
    خروجی:
    مجموع دقایق لازم برای رسیدن به درصد k
    """
    
    # محاسبه مجموع زمان‌ها
    minutes = 0
    for i in range(1, k + 1):
        minutes += i
    
    return minutes

